 br
 div
  img.h-album_art(src='/pic/album/{{info.album_art}}')
  div.h-album_content
   div.h-album_title Название
   div.h-album_info.h-album_name {{info.album}} 
   div.h-album_title Год релиза
   div.h-album_info {{info.relise}}
   div.h-album_title Количество композиций
   div.h-album_info {{info.track_sum}}
   div.h-album_title Продолжительность
   div.h-album_info {{info.count}}
   div.h-album_genre
    span.h-album_tag(ng-repeat='mus in bio.genre') {{mus}}
