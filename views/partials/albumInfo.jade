 div.h-album_tracklist
  table.h-album_table
   tr
    td 
    td.metaCell Композиция
    td.metaCell Продолжительность
    
   tr(ng-repeat='track in bio.bio')
    td.firstCell {{track.num}}
    td.secondCell {{track.name}}
    td.thirdCell {{track.time}}
